    "scripts": {
        "clean": "rm -Rf ./dist",
        "//build": "The 'cp' to copy public file must happen after tsup is done, not before",
        "build": "NODE_ENV=production tsup && cp -R public/ dist/",
        "dev": "NODE_ENV=development tsup --watch --onSuccess='cp -R public/ dist/ && node ./dist/server.mjs'",
        "copy:public": "cp -R public/ dist/",
        "build:webpack": "NODE_ENV=production webpack --config webpack.production.js",
        "dev:webpack": "NODE_ENV=development webpack --config webpack.development.js",
        "dev:clean:webpack": "NODE_ENV=development DISABLE_CACHE=true webpack --config webpack.development.js",
        "fmt": "prettier --write \"src/**/*.{ts,js,mjs,yml,graphql}\"",
        "heroku-postbuild": "NODE_ENV=production webpack --config webpack.production.js",
        "start": "node dist/server.mjs"
    },
    "engines": {
        "node": "16.15.0"
    }
}
