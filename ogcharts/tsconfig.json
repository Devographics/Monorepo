{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
    },
    "include": [
        "./src/app.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "./types",
        "./node_modules/@types"
    ]
}