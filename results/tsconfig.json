{
  "extends": "../tsconfig.json",
  "references": [{ "path": "../common" }],
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "core/*": ["./src/core/*"]
    }
  }
}
