{
    "compilerOptions": {
        "target": "es2021",
        "moduleResolution": "Node",
        "module": "ES2020",
        "lib": ["es7", "es2019", "es2021"],
        "outDir": "dist",
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": true
    },
    "files": [
        "file_types.d.ts",
        "./src/generate/graphqlize.ts",
        "src/graphql/templates/surveys.ts",
        "src/graphql/templates/survey.ts",
        "src/graphql/templates/editions_enum.ts",
        "src/graphql/templates/edition.ts",
        "src/graphql/templates/section.ts",
        "src/graphql/templates/field.ts",
        "src/graphql/templates/filter.ts",
        "src/graphql/templates/option.ts",
        "src/graphql/templates/enum.ts",
        "src/graphql/templates/filters.ts",
        "src/graphql/templates/facets.ts"
    ],
    "exclude": ["/node_modules/"],
    "include": ["src/**/*"]
}
