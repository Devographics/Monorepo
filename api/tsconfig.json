{
  "extends": "../tsconfig.json",
  "references": [{ "path": "../common" }],
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es7", "es2019"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true
  },
  "files": ["file_types.d.ts"],
  "exclude": ["/node_modules/"],
  "include": ["src/**/*"]
}